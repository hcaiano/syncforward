{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "jsx": "react-jsx",
    "lib": ["esnext.intl", "es2017.intl", "es2018.intl"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "baseUrl": ".",
    "paths": {
      "@uicomponents": ["./components"],
      "@uicomponents/*": ["./components/*"],
      "@styles": ["./styles"],
      "@styles/*": ["./styles/*"],
      "@icons": ["./icons"]
    }
  },
  "exclude": ["storybook-static", "icon-index-template.js", "icon-template.js"],
  "include": [
    ".eslintrc.js",
    "assets/**/*",
    "icons/**/*",
    "components/**/*",
    "styles/**/*",
    "utils/**/*",
    "**/*.tsx",
    "**/*.ts",
    "*.config.js",
    "logos/**/*"
  ]
}
