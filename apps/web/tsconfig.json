{
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "lib": ["esnext.intl", "es2017.intl", "es2018.intl"],
    "noImplicitAny": false,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "paths": {
      "@assets": ["./src/assets"],
      "@assets/*": ["./src/assets/*"],
      "@config/*": ["./src/config/*"],
      "@components": ["./src/components"],
      "@components/*": ["./src/components/*"],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@modules/*": ["./src/modules/*"],
      "@providers": ["./src/providers"],
      "@store": ["./src/store"],
      "@store/*": ["./src/store/*"],
      "@projects/*": ["./src/components/Projects/*"],
      "@utils": ["./src/utils"],
      "@offchain/*": ["./src/services/offchain/*"],
      "@onchain/*": ["./src/services/onchain/*"],
      "@styles": ["../../packages/ui/styles"],
      "@styles/*": ["../../packages/ui/styles/*"],
      "@ui": ["../../packages/ui"],
      "@ui/*": ["../../packages/ui/*"],
      "@icons": ["../../packages/ui/icons"]
    }
  },
  "include": [".eslintrc.js", "**/*.tsx", "**/*.ts", "*.config.js"]
}
