{
  "name": "turborepo-basic-shared",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "storybook": "yarn workspace ui storybook",
    "prepare": "husky install",
    "check-types": "yarn workspace ui tsc --pretty --noEmit",
    "check-format": "yarn workspace ui prettier --check \"**/*.{ts,tsx,md,json}\"",
    "check-lint": "yarn workspace ui eslint . --ext ts --ext tsx --ext js",
    "test-all": "yarn check-format && yarn check-lint && yarn check-types && yarn build"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "packageManager": "yarn@1.22.17",
  "lint-staged": {
    "apps/**/*.{ts,tsx}": [
      "eslint --fix"
    ],
    "packages/ui/!(icons)/*.{ts,tsx}": [
      "eslint --fix"
    ]
  }
}
