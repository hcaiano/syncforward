{
  "name": "syncforward-monorepo",
  "description": "Monorepo with Sync Forward javascript packages and applications",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev --parallel",
    "lint": "turbo run lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,json}\"",
    "storybook": "yarn workspace ui storybook",
    "prepare": "husky install",
    "check-types": "yarn workspace ui tsc --pretty --noEmit",
    "check-format": "prettier --check \"**/*.{ts,tsx,md,json}\"",
    "check-lint": "eslint . --ext ts --ext tsx --ext js",
    "test-all": "yarn check-format && yarn lint && yarn check-lint && yarn check-types && yarn build",
    "semantic-release": "semantic-release"
  },
  "devDependencies": {
    "husky": "^7.0.4",
    "lint-staged": "^12.3.7",
    "prettier": "^2.5.1",
    "turbo": "latest"
  },
  "engines": {
    "npm": ">=7.0.0",
    "node": ">=14.0.0"
  },
  "lint-staged": {
    "apps/**/*.{ts,tsx,js}": [
      "eslint --fix"
    ],
    "packages/ui/!(icons)/*.{ts,tsx,js}": [
      "eslint --fix"
    ]
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "packageManager": "yarn@1.22.17"
}
